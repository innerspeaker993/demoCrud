doctype html
include partials/header 
	if user.length
	table(class="table")
		thead
			tr
				th Username
				th Email
				th Edit
				th Delete
		tbody 
			users.forEach(function(user))	

				tr
					td = user.username 
					td = user.email 
					td a(href="/user/ =user.id", class ="btn btn-success")
						span(class="glyphicon glyphicon-edit") Edit
					td
						form(method ="POST", action="/user")
							input(type="hidden", name="method", value="DELETE")
							input( type="hidden", name="id" value="=user.id")
							button(type="submit", class="btn btn-danger preview-add-button")
								span(class="glyphicon glyphicon-plus") Delete

		else
			div(class="alert alert-danger") Actualmenteno hay usuarios
include partials/footer 





